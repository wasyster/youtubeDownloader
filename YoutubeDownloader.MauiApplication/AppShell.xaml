<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YoutubeDownloader.MauiApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YoutubeDownloader.MauiApplication.Views"
    xmlns:icons="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Single video">
            <ShellContent ContentTemplate="{DataTemplate views:FileDownloadView}" />
        </Tab>
        <Tab Title="Playlist">
            <ShellContent ContentTemplate="{DataTemplate views:PlaylistDownloadView}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsView}" />
        </Tab>
    </TabBar>
</Shell>
